  </div>
</div>
<div class="form-group row">
  <%= form.label :icon, class: 'col-sm-2 col-form-label' %>
  <div class="col-sm-10">
    <%= form.file_field :icon, class: 'form-control' %>
  </div>
</div>
<div class="text-center">
  <%= form.submit class: 'btn btn-primary btn-lg active' %>
</div>

<% end %>
