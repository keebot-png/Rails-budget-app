<h1 class='text-center category-h1'>Categories</h1>
<p style="color: green"><%= notice %></p>

<div id="categories">
  <% @categories.each do |category| %>
    <%= render category %>
  <% end %>
</div>

<div class="fixed-bottom">
  <div class='btn btn-success w-100 text-center'>
    <%= button_to "Add a new category", new_category_path, class: 'btn btn-outline-light w-75', method: :get %>
  </div>
</div>
