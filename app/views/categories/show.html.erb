<p style="color: green"><%= notice %></p>

<%= render @category %>

<div>
  <%= link_to "Edit this category", edit_category_path(@category) %> |
  <%= link_to "Back to categories", categories_path %>

  <%= button_to "Destroy this category", @category, method: :delete %>
</div>

<h1>Payments</h1>

<div id="payments">
  <p>Total amount: $<%= @category.payments.sum(:amount) %></p>
  <% @payments.each do |payment| %>
    <p>
      <%= payment.name %>
    </p>

  <p class="amount">
    $<%= payment.amount %>
  </p>
  <% end %>
</div>


<%= link_to "Add New Payment", new_category_payment_path(@category) %>
