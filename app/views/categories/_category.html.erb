<div class='container-block'>
<div class="container-style">
<% if category.icon.attached? %>
        <div class="column-1"><%= image_tag category.icon, class: "image" %></div>
        <% end %>
        <div class="column-2">
        <div class="first">
            <p><strong>Category: <%= link_to category.name, category_path(category.id) %></strong></p>
            <% date = DateTime.parse(category.created_at.to_s) %>
            <% formatted_date = date.strftime('%d %B %Y') %>
            <p><small><%= formatted_date %></small></p>
        </div>
            <div class="second">
            <p class="end-tag"><strong>Total: $<%= category.payments.sum(:amount) %></strong></p>
            </div>
        </div>
</div>