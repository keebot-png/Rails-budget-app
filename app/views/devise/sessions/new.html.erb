<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/"><i class="fa fa-arrow-left" aria-hidden="true"></i></a>
    </div>
    <div class="navbar-form navbar-right">
      <p class="navbar-brand">Login</p>
    </div>
  </div>
</nav>

<div class="container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.email_field :email, placeholder: "Email", class: "form-control", id: "email", autofocus: true, autocomplete: "email" %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, placeholder: "Password", class: "form-control", autocomplete: "current-password" %>
    </div>
    <div class='text-center'>
      <%= f.submit "Log in", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>